{
  "name": "Whaler",
  "version": "0.1.3",
  "description": "Squash merges from the GitHub merge button.",
  "icons": { "128": "whale_icon.png" },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["libs/jquery-2.1.3.js", "content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "web_accessible_resources": [
        "css/whaler.css"
  ],
  "permissions": [
      "webRequest",
      "webRequestBlocking",
      "cookies",
      "*://github.com/*/pull/*"
  ]
}
