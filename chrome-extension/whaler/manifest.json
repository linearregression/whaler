{
  "name": "Whaler",
  "version": "0.0.1",
  "description": "Customizations to the GitHub merge button.",
  "content_scripts": [
    {
      "matches": ["*://github.com/*/pull/*"],
      "all_frames": true,
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "web_accessible_resources": [
        "css/whaler.css"
  ],
  "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://github.com/*/pull/*"
  ]
}
